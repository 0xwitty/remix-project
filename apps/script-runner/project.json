{
  "name": "script-runner",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/script-runner/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "development",
      "options": {
        "compiler": "babel",
        "outputPath": "dist/apps/script-runner",
        "index": "apps/script-runner/src/index.html",
        "baseHref": "./",
        "main": "apps/script-runner/src/main.tsx",
        "polyfills": "apps/script-runner/src/polyfills.ts",
        "tsConfig": "apps/script-runner/tsconfig.app.json",
        "assets": [
          "apps/script-runner/src/favicon.ico",
          "apps/script-runner/src/assets",
          "apps/script-runner/src/profile.json"
        ],
        "styles": ["apps/script-runner/src/styles.css"],
        "scripts": [],
        "webpackConfig": "apps/script-runner/webpack.config.js"
      },
      "configurations": {
        "development": {
        },
        "production": {
          "fileReplacements": [
            {
              "replace": "apps/script-runner/src/environments/environment.ts",
              "with": "apps/script-runner/src/environments/environment.prod.ts"
            }
          ]
        }
      }
    },
    "serve": {
      "executor": "@nrwl/webpack:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "script-runner:build",
        "hmr": true,
        "baseHref": "/"
      },
      "configurations": {
        "development": {
          "buildTarget": "script-runner:build:development",
          "port": 5003
        },
        "production": {
          "buildTarget": "script-runner:build:production"
        }
      }
    }
  },
  "tags": []
}
